{
    "name": "kosteams/yandex-payments-for-woocommerce",
    "description": "Плагин для приема платежей через Яндекс Pay и Яндекс Сплит в WooCommerce",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "KosTeam",
            "email": "support@kosteams.com",
            "homepage": "https://kosteams.com"
        }
    ],
    "homepage": "https://kosteams.com",
    "support": {
        "issues": "https://github.com/kosteams/yandex-payments-for-woocommerce/issues",
        "source": "https://github.com/kosteams/yandex-payments-for-woocommerce",
        "docs": "https://kosteams.com/docs/yandex-payments"
    },
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "KosTeams\\YandexPayments\\": "includes/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KosTeams\\YandexPayments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "phpstan": "vendor/bin/phpstan analyse",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "fix": "vendor/bin/phpcbf",
        "post-install-cmd": [
            "@composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "@composer dump-autoload -o"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}